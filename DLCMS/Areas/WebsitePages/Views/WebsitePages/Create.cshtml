@model dlwebclasses.Website_Pages

@Html.HiddenFor(x => x.ID)
<div class="form-group">
    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Department, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.DepartmentInt, (List<SelectListItem>)ViewBag.DepartmentList, "Select" , new { @class = "form-control", @onchange = "FillSubsequestDropDown('DepartmentInt', 'Sub_DepartmentInt', '/WebsitePages/WebsitePages/GetSubDepartment')", id = "DepartmentInt", required = "required" })
        @Html.ValidationMessageFor(model => model.Department)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Sub_Department, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Sub_DepartmentInt, (SelectList)ViewBag.SubDepartmentList, "Select" , new { @class = "form-control", @onchange = "FillSubsequestDropDown('Sub_DepartmentInt', 'Sub_Sub_DepartmentInt', '/WebsitePages/WebsitePages/GetSubDepartment')", id = "Sub_DepartmentInt" })
        @Html.ValidationMessageFor(model => model.Sub_Department)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Sub_Sub_DepartmentInt, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Sub_Sub_Department, (SelectList)ViewBag.SubSubDepartmentList, "Select" , new { @class = "form-control", id = "Sub_Sub_DepartmentInt" })
        @Html.ValidationMessageFor(model => model.Sub_Sub_Department)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", maxlength = "70" } })
        @Html.ValidationMessageFor(model => model.Title)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows="3", maxlength = "160" })
        @Html.ValidationMessageFor(model => model.Description)
    </div>
</div>


<div class="form-group">
    @Html.LabelFor(model => model.Keywords, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextAreaFor(model => model.Keywords,  new { @class = "form-control", rows="5" })
        @Html.ValidationMessageFor(model => model.Keywords)
    </div>
</div>





<div class="form-group">
    @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextAreaFor(model => model.Text, new { @class = "form-control", rows="25" })
        @Html.ValidationMessageFor(model => model.Text)
    </div>
</div>



<div class="form-group">
    @Html.LabelFor(model => model.Filename, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Filename, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Filename)
    </div>
</div>


<div class="form-group">
    @Html.LabelFor(model => model.Company, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Company, (List<SelectListItem>)ViewBag.CompanyList, "Select",  new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Company)
    </div>
</div>





<div class="form-group">
    @Html.LabelFor(model => model.VideoId, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.VideoId, (List<SelectListItem>)ViewBag.VideoList, "Select",  new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.VideoId)
    </div>
</div>

<div class="form-group">
    <a data-target="#AgencyPanel" style="cursor:pointer" data-toggle="collapse">Other feilds not used frequently</a>
    <div class="col-md-10">
        <div id="AgencyPanel" class="collapse">
            <div class="form-group">
                @Html.LabelFor(model => model.CustomSubDepartment, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CustomSubDepartment, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomSubDepartment)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SubDepartmentSwitchboard, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SubDepartmentSwitchboard, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SubDepartmentSwitchboard)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomDepartment, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CustomDepartment, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomDepartment)
                </div>
            </div>

        </div>
    </div>
</div>


<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="@(Model == null ? "Create" : "Update")" class="btn btn-default" />
    </div>
</div>

