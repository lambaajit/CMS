@model IEnumerable<DLCMS.Models.Updates_MainWebsites>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<nav class="navbar navbar-default custumbackcolor" role="navigation">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        @using (Html.BeginForm("Index", "CURD_NewsArticles"))
        {
            <ul class="nav navbar-nav custumbackcolor">
                <li>
                    <a href='@Url.Action("Index")'>
                        <span class="glyphicon glyphicon-chevron-right" style="margin-right:5px"></span>Show Today's Articles 
                    </a>
                </li>
                <li>
                    <a href='@Url.Action("Create")'>
                        <span class="glyphicon glyphicon-new-window" style="margin-right:5px"></span>Create News/Article
                    </a>
                </li>
                <li>
    Search By:
    @Html.RadioButton("searchon", "ID") ID
    @Html.RadioButton("searchon", "Title") Title

                </li>
            </ul>
            <div class="col-sm-3 col-md-3 pull-right">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" name="searchString" value="@ViewBag.searchString">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>

            </div>
        }
    </div>
</nav>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_Update)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date_Update)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
        </td>
    </tr>
}

</table>
